# Production Environment Configuration
# ===================================

# Trading Configuration
TRADING_MODE=LIVE
TRADING_STRATEGY=HYPER_COMPOUND
RISK_LEVEL=MEDIUM
MAX_CONCURRENT_TRADES=5
MIN_PROFIT_THRESHOLD=0.05
MAX_LOSS_THRESHOLD=0.10

# Wallet Configuration
MAX_WALLETS=10
WALLET_ROTATION_INTERVAL=3600
MIN_WALLET_BALANCE=0.1
MAX_WALLET_BALANCE=10.0

# Network Configuration
SOLANA_RPC_URL=https://api.mainnet-beta.solana.com
SOLANA_WS_URL=wss://api.mainnet-beta.solana.com
JUPITER_API_URL=https://quote-api.jup.ag/v6
BIRDEYE_API_URL=https://public-api.birdeye.so

# API Keys (Replace with actual keys)
BIRDEYE_API_KEY=your_birdeye_api_key_here
JUPITER_API_KEY=your_jupiter_api_key_here
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here
TELEGRAM_CHAT_ID=your_telegram_chat_id_here

# Security Configuration
KILL_SWITCH_ENABLED=true
MAX_DAILY_LOSS=100.0
MAX_SINGLE_TRADE_LOSS=10.0
EMERGENCY_STOP_LOSS=0.20

# Monitoring Configuration
LOG_LEVEL=INFO
METRICS_ENABLED=true
ALERT_ENABLED=true
PERFORMANCE_TRACKING=true

# Database Configuration
DATABASE_URL=sqlite:///data/trading_bot.db
REDIS_URL=redis://localhost:6379

# Vault Configuration
VAULT_ENABLED=true
PROFIT_VAULT_PERCENTAGE=0.20
VAULT_ADDRESS=your_vault_address_here

# Intelligence Configuration
SENTIMENT_ANALYSIS_ENABLED=true
TECHNICAL_ANALYSIS_ENABLED=true
RUG_DETECTION_ENABLED=true
ALPHA_CALLER_ENABLED=true

# Testing Configuration
TEST_MODE=false
SIMULATION_BALANCE=1000.0
BACKTEST_ENABLED=false

# Performance Configuration
MAX_MEMORY_USAGE=2048
CPU_LIMIT=80
DISK_LIMIT=90

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_INTERVAL=3600
BACKUP_RETENTION_DAYS=7

# Deployment Configuration
DOCKER_ENABLED=true
CONTAINER_NAME=antbot_trading
DOCKER_IMAGE=antbot:latest

# Logging Configuration
LOG_FILE_PATH=logs/trading_bot.log
LOG_ROTATION_SIZE=100MB
LOG_RETENTION_DAYS=30

# Alert Configuration
EMAIL_ALERTS_ENABLED=false
EMAIL_SMTP_SERVER=smtp.gmail.com
EMAIL_SMTP_PORT=587
EMAIL_USERNAME=your_email@gmail.com
EMAIL_PASSWORD=your_email_password_here

# Telegram Configuration
TELEGRAM_ALERTS_ENABLED=true
TELEGRAM_ALERT_LEVEL=WARNING

# Slack Configuration
SLACK_ALERTS_ENABLED=false
SLACK_WEBHOOK_URL=your_slack_webhook_url_here

# Discord Configuration
DISCORD_ALERTS_ENABLED=false
DISCORD_WEBHOOK_URL=your_discord_webhook_url_here

# Health Check Configuration
HEALTH_CHECK_INTERVAL=300
HEALTH_CHECK_TIMEOUT=30

# Rate Limiting
RPC_RATE_LIMIT=50
API_RATE_LIMIT=100

# Timeout Configuration
RPC_TIMEOUT=10
API_TIMEOUT=15
TRANSACTION_TIMEOUT=60

# Retry Configuration
MAX_RETRIES=3
RETRY_DELAY=1.0
RETRY_BACKOFF=2.0

# Cache Configuration
CACHE_ENABLED=true
CACHE_TTL=300
CACHE_MAX_SIZE=1000

# Metrics Configuration
PROMETHEUS_ENABLED=true
PROMETHEUS_PORT=9090
GRAFANA_ENABLED=true
GRAFANA_PORT=3000

# Development Configuration
DEBUG_MODE=false
PROFILING_ENABLED=false
TRACE_ENABLED=false 