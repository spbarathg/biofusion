# =============================================================================
# MEMECOIN TRADING BOT - ENVIRONMENT CONFIGURATION
# =============================================================================
# Copy this file to .env and fill in your actual API keys and configuration
# DO NOT commit your actual .env file to version control

# =============================================================================
# SOLANA NETWORK CONFIGURATION
# =============================================================================
# Mainnet RPC endpoints (use multiple for redundancy)
SOLANA_RPC_URL_1=https://api.mainnet-beta.solana.com
SOLANA_RPC_URL_2=https://solana-api.projectserum.com
SOLANA_RPC_URL_3=https://rpc.ankr.com/solana
SOLANA_RPC_URL_4=https://solana.public-rpc.com

# Preferred RPC endpoint (will be used as primary)
SOLANA_RPC_URL=https://api.mainnet-beta.solana.com

# =============================================================================
# API KEYS - REQUIRED FOR PRODUCTION
# =============================================================================

# Helius API (for enhanced token metadata and RPC)
HELIUS_API_KEY=your_helius_api_key_here

# Birdeye API (for market data and analytics)
BIRDEYE_API_KEY=your_birdeye_api_key_here

# Jupiter API (for DEX aggregator)
JUPITER_API_KEY=your_jupiter_api_key_here

# DexScreener API (for market scanning)
DEXSCREENER_API_KEY=your_dexscreener_api_key_here

# =============================================================================
# TRADING CONFIGURATION
# =============================================================================

# Initial trading capital in USD
INITIAL_CAPITAL=300.0

# Trading mode: production or simulation
TRADING_MODE=production

# Maximum concurrent positions
MAX_CONCURRENT_POSITIONS=5

# Position size as percentage of capital (0.1 = 10%)
POSITION_SIZE_PERCENT=0.2

# Maximum position size in SOL
MAX_POSITION_SIZE_SOL=50.0

# Minimum profit target (0.05 = 5%)
MIN_PROFIT_TARGET=0.05

# Maximum loss percentage (0.15 = 15%)
MAX_LOSS_PERCENT=0.15

# Maximum hold time in hours
MAX_HOLD_TIME_HOURS=4

# Market scan interval in seconds
SCAN_INTERVAL_SECONDS=30

# Minimum sentiment score for buying (0.0 to 1.0)
SENTIMENT_THRESHOLD=0.3

# Enable profit compounding
COMPOUNDING_ENABLED=true

# Aggressive trading mode
AGGRESSIVE_MODE=true

# =============================================================================
# WALLET CONFIGURATION
# =============================================================================

# Number of trading wallets to create
WALLET_COUNT=10

# Wallet evolution interval in hours
EVOLUTION_INTERVAL_HOURS=24

# Evolution mutation rate (0.0 to 1.0)
EVOLUTION_MUTATION_RATE=0.1

# Minimum performance threshold for wallet retirement
RETIREMENT_THRESHOLD=0.3

# =============================================================================
# SENTIMENT ANALYSIS CONFIGURATION
# =============================================================================

# Sentiment analysis model to use
SENTIMENT_MODEL=finbert

# Minimum confidence for sentiment decisions (0.0 to 1.0)
MIN_SENTIMENT_CONFIDENCE=0.6

# Sentiment analysis update interval in minutes
SENTIMENT_UPDATE_INTERVAL=5

# Enable sentiment blacklisting
SENTIMENT_BLACKLIST_ENABLED=true

# Blacklist duration in hours
BLACKLIST_DURATION_HOURS=24

# =============================================================================
# MARKET SCANNER CONFIGURATION
# =============================================================================

# Minimum liquidity in SOL for memecoins
MIN_LIQUIDITY_SOL=5.0

# Minimum 24h volume in SOL
MIN_VOLUME_SOL=50.0

# Maximum price impact percentage
MAX_PRICE_IMPACT_PERCENT=5.0

# Maximum token age in hours
MAX_TOKEN_AGE_HOURS=168

# Minimum holder count
MIN_HOLDER_COUNT=50

# Number of trending tokens to scan
TRENDING_TOKENS_LIMIT=30

# =============================================================================
# SAFETY AND RISK MANAGEMENT
# =============================================================================

# Enable kill switch
KILL_SWITCH_ENABLED=true

# Kill switch triggers
KILL_SWITCH_MAX_DRAWDOWN=0.3
KILL_SWITCH_MAX_LOSS_PER_HOUR=0.1
KILL_SWITCH_MAX_TRADES_PER_HOUR=100

# Vault configuration
VAULT_ENABLED=true
VAULT_PROFIT_PERCENTAGE=0.2
VAULT_MIN_BALANCE_SOL=1.0

# Emergency shutdown conditions
EMERGENCY_SHUTDOWN_ENABLED=true
EMERGENCY_MAX_LOSS_SOL=10.0
EMERGENCY_MAX_DRAWDOWN=0.5

# =============================================================================
# MONITORING AND LOGGING
# =============================================================================

# Log level: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# Enable performance monitoring
PERFORMANCE_MONITORING=true

# Performance tracking interval in minutes
PERFORMANCE_INTERVAL_MINUTES=5

# Enable detailed logging
DETAILED_LOGGING=true

# Log file path
LOG_FILE_PATH=logs/memecoin_bot.log

# Maximum log file size in MB
MAX_LOG_SIZE_MB=100

# Number of log files to keep
LOG_BACKUP_COUNT=5

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================

# Database type: sqlite, redis, mongodb
DATABASE_TYPE=sqlite

# SQLite database path
SQLITE_DB_PATH=data/trading_bot.db

# Redis configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=

# MongoDB configuration
MONGODB_URI=mongodb://localhost:27017/
MONGODB_DATABASE=memecoin_bot

# =============================================================================
# EXTERNAL INTEGRATIONS
# =============================================================================

# Discord webhook for notifications
DISCORD_WEBHOOK_URL=your_discord_webhook_url_here

# Telegram bot token and chat ID
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here
TELEGRAM_CHAT_ID=your_telegram_chat_id_here

# Email notifications
EMAIL_ENABLED=false
EMAIL_SMTP_SERVER=smtp.gmail.com
EMAIL_SMTP_PORT=587
EMAIL_USERNAME=your_email@gmail.com
EMAIL_PASSWORD=your_email_password_here
EMAIL_RECIPIENTS=your_email@gmail.com

# =============================================================================
# ADVANCED CONFIGURATION
# =============================================================================

# Enable stealth mode (fake trades, bot baiting)
STEALTH_MODE_ENABLED=true

# Stealth fake trade percentage (0.0 to 1.0)
STEALTH_FAKE_TRADE_PERCENTAGE=0.1

# Behavior randomization for stealth
STEALTH_RANDOMIZATION=true

# Rate limiting configuration
RATE_LIMIT_REQUESTS_PER_SECOND=10
RATE_LIMIT_BURST_SIZE=20

# Connection timeouts
HTTP_TIMEOUT_SECONDS=30
WEBSOCKET_TIMEOUT_SECONDS=60

# Retry configuration
MAX_RETRIES=3
RETRY_DELAY_SECONDS=1

# =============================================================================
# DEVELOPMENT AND TESTING
# =============================================================================

# Enable debug mode
DEBUG_MODE=false

# Enable simulation mode
SIMULATION_MODE=false

# Test wallet private key (for testing only)
TEST_WALLET_PRIVATE_KEY=your_test_wallet_private_key_here

# Enable dry run mode
DRY_RUN_MODE=false

# =============================================================================
# PERFORMANCE OPTIMIZATION
# =============================================================================

# Enable async optimization
ASYNC_OPTIMIZATION=true

# Enable connection pooling
CONNECTION_POOLING=true

# Pool size for HTTP connections
HTTP_POOL_SIZE=20

# Enable memory optimization
MEMORY_OPTIMIZATION=true

# Cache duration in seconds
CACHE_DURATION_SECONDS=300

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================

# Enable encryption for sensitive data
ENCRYPTION_ENABLED=true

# Encryption key (generate a secure random key)
ENCRYPTION_KEY=your_32_character_encryption_key_here

# Enable API key rotation
API_KEY_ROTATION_ENABLED=false

# API key rotation interval in hours
API_KEY_ROTATION_INTERVAL=24

# =============================================================================
# BACKUP AND RECOVERY
# =============================================================================

# Enable automatic backups
AUTO_BACKUP_ENABLED=true

# Backup interval in hours
BACKUP_INTERVAL_HOURS=6

# Backup retention days
BACKUP_RETENTION_DAYS=7

# Backup directory
BACKUP_DIRECTORY=backups/

# =============================================================================
# COMPOUNDING STRATEGY
# =============================================================================

# Compounding percentage (0.0 to 1.0)
COMPOUNDING_PERCENTAGE=0.8

# Vault percentage (0.0 to 1.0)
VAULT_PERCENTAGE=0.2

# Minimum profit for compounding in SOL
MIN_COMPOUNDING_PROFIT_SOL=0.01

# Compound on every trade or batch
COMPOUND_EVERY_TRADE=true

# =============================================================================
# SENTIMENT WEIGHTS
# =============================================================================

# Weight for immediate sentiment (0.0 to 1.0)
SENTIMENT_WEIGHT_IMMEDIATE=0.5

# Weight for sentiment trend (0.0 to 1.0)
SENTIMENT_WEIGHT_TREND=0.3

# Weight for sentiment stability (0.0 to 1.0)
SENTIMENT_WEIGHT_STABILITY=0.1

# Weight for sentiment strength (0.0 to 1.0)
SENTIMENT_WEIGHT_STRENGTH=0.1

# =============================================================================
# MEMECOIN PATTERN DETECTION
# =============================================================================

# Enable pattern detection
PATTERN_DETECTION_ENABLED=true

# Hype cycle detection sensitivity (0.0 to 1.0)
HYPE_CYCLE_SENSITIVITY=0.7

# FOMO pattern detection sensitivity (0.0 to 1.0)
FOMO_PATTERN_SENSITIVITY=0.6

# Dump pattern detection sensitivity (0.0 to 1.0)
DUMP_PATTERN_SENSITIVITY=0.8

# Accumulation pattern detection sensitivity (0.0 to 1.0)
ACCUMULATION_PATTERN_SENSITIVITY=0.5 