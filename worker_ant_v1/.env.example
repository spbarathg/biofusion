# Enhanced Crypto Trading Bot - Environment Configuration
# =====================================================
# Copy this file to .env and fill in your actual values

# === CORE WALLET CONFIGURATION ===
# Main wallet private key for trading operations
WALLET_PRIVATE_KEY=your_main_wallet_private_key_here

# Worker ant wallet private keys (10 wallets for swarm operations)
WORKER_WALLET_1=worker_ant_1_private_key_here
WORKER_WALLET_2=worker_ant_2_private_key_here
WORKER_WALLET_3=worker_ant_3_private_key_here
WORKER_WALLET_4=worker_ant_4_private_key_here
WORKER_WALLET_5=worker_ant_5_private_key_here

# Vault wallet for profit storage (secure cold storage recommended)
VAULT_WALLET_PRIVATE_KEY=vault_wallet_private_key_here

# === SOLANA RPC CONFIGURATION ===
# Primary RPC URL (use private RPC for better performance)
SOLANA_RPC_URL=https://api.mainnet-beta.solana.com
PRIVATE_RPC_URL=your_private_rpc_url_here

# === TRADING CONFIGURATION ===
# Operating mode: simulation, paper, live
TRADING_MODE=simulation

# Trading amounts in SOL
TRADE_AMOUNT_SOL=0.2
PROFIT_TARGET_PERCENT=8.0
STOP_LOSS_PERCENT=7.0
MAX_DAILY_LOSS_SOL=2.0

# === API KEYS ===
# Birdeye API (for premium data feeds)
BIRDEYE_API_KEY=your_birdeye_api_key_here

# === NOTIFICATION SETTINGS ===
# Telegram notifications
ENABLE_TELEGRAM_ALERTS=false
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here
TELEGRAM_CHAT_ID=your_telegram_chat_id_here

# === SAFETY SETTINGS ===
# Swarm kill switch threshold (SOL loss limit)
SWARM_KILL_SWITCH_THRESHOLD=2.0
