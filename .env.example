# SMART APE MODE - INFRASTRUCTURE CONFIGURATION
# ============================================
# Root level environment for monitoring and infrastructure

# === DASHBOARD & WEB INTERFACE ===
DASHBOARD_PORT=8501
DASHBOARD_HOST=0.0.0.0
DASHBOARD_PASSWORD=changeme

# === LOGGING CONFIGURATION ===
LOG_LEVEL=INFO
LOG_DIR=logs
LOG_MAX_SIZE=50
LOG_RETENTION=30

# === PERFORMANCE SETTINGS ===
MAX_WORKERS=10
MAX_CONCURRENT_REQUESTS=50
REQUEST_TIMEOUT=30
WORKER_ALLOCATION_PERCENT=20

# === MONITORING & SYSTEM HEALTH ===
ENABLE_HEALTH_MONITORING=true
HEALTH_CHECK_INTERVAL=60
CPU_THRESHOLD=80
MEMORY_THRESHOLD=85

# === AWS INFRASTRUCTURE ===
AWS_S3_BUCKET=smart-ape-logs
AWS_REGION=us-east-1
ENABLE_S3_BACKUP=true

# === SECURITY SETTINGS ===
ENCRYPTION_KEY_PATH=config/secrets/.encryption_key
SECURITY_LEVEL=high